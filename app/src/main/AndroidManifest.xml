<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- (Opcjonalnie) jeśli kiedyś uruchomisz serwis w trybie foreground -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="false"
        android:label="Wilczek Glyph Toy"
        android:supportsRtl="true">

        <!-- Publiczny serwis widoczny dla zewnętrznych aplikacji (np. Glyph Toys) -->
        <service
            android:name=".WolfToyService"
            android:enabled="true"
            android:exported="true">

            <!-- Intent-filter nie jest zawsze wymagany, ale pomaga hostom,
                 które skanują serwisy po akcjach. Akcja może być dowolnym,
                 unikalnym stringiem Twojej aplikacji. -->
            <intent-filter>
                <action android:name="com.example.wilczektoy.WOLF_TOY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </service>

    </application>
</manifest>
