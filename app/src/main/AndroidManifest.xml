<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="com.nothing.ketchum.permission.ENABLE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <service
            android:name=".WolfToyService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.nothing.glyph.TOY" />
            </intent-filter>

            <meta-data
                android:name="com.nothing.glyph.toy.name"
                android:resource="@string/toy_name_wilczek" />

            <meta-data
                android:name="com.nothing.glyph.toy.image"
                android:resource="@drawable/img_toy_preview_wilczek" />

            <meta-data
                android:name="com.nothing.glyph.toy.summary"
                android:resource="@string/toy_summary_wilczek" />

            <meta-data
                android:name="com.nothing.glyph.toy.longpress"
                android:value="1" />

            <meta-data
                android:name="com.nothing.glyph.toy.aod_support"
                android:value="1" />
        </service>

    </application>
</manifest>